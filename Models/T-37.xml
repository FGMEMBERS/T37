 <animation>
  <type>select</type>
  <object-name>nose_wheel</object-name>
  <object-name>nose_strut</object-name>
  <condition>
   <greater-than>
    <property>gear/gear[0]/position-norm</property>
    <value>0</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>nose_wheel</object-name>
  <object-name>nose_strut</object-name>
  <property>surface-positions/rudder-pos-norm</property>
  <factor>20</factor>
  <center>
   <x-m>-1.953</x-m>
   <y-m>0.0</y-m>
   <z-m>0.11</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>-1</z>
  </axis>
 </animation>

 <animation>
	<type>translate</type>
	<object-name>nose_wheel</object-name>
	<object-name>nose_strut</object-name>
	<property>gear/gear[0]/compression-ft</property>
	<factor>0.3048</factor>
	<center>
		<x-m>-1.950</x-m>
		<y-m>0</y-m>
		<z-m>0.0</z-m>
	</center>
	<axis>
		<x>0.0</x>
		<y>0.0</y>
		<z>1.0</z>
	 </axis>
</animation>

