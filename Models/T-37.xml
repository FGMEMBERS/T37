	 <object-name>nose-gear-door.L</object-name>
	 <property>gear/gear[0]/position-norm</property>
	 <interpolation>
		 <entry><ind>0</ind><dep>0</dep></entry>
		 <entry><ind>0.2</ind><dep>90</dep></entry>	
		 <entry><ind>1.0</ind><dep>90.0</dep></entry>
	 </interpolation>
	 <center>
		 <x-m>-2.53</x-m>
		 <y-m>-0.15</y-m>
		 <z-m>-0.26</z-m>
	 </center>
	 <axis>
		 <x>-0.651</x>
		 <y>0</y>
		 <z>0.098</z>
	 </axis>
 </animation>

 <animation>
	 <type>rotate</type>
	 <object-name>nose-gear-door.R</object-name>
	 <property>gear/gear[0]/position-norm</property>
	 <interpolation>
		 <entry><ind>0</ind><dep>0</dep></entry>
		 <entry><ind>0.2</ind><dep>-90</dep></entry>	
		 <entry><ind>1.0</ind><dep>-90.0</dep></entry>
	 </interpolation>
	 <center>
		 <x-m>-2.53</x-m>
		 <y-m>0.15</y-m>
		 <z-m>-0.26</z-m>
	 </center>
	 <axis>
		 <x>-0.651</x>
		 <y>0</y>
